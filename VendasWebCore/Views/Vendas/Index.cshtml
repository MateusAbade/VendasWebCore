
@{
    ViewData["Title"] = "Vendas";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="MinDate" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="MinDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="MaxDate" class="col-lg-2 control-label">Data maxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="MaxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset> 
        </form>
    </div>
</div>


 <div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca agrupada</legend>
                <div class="form-group">
                    <label for="MinDate" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="MinDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="MaxDate" class="col-lg-2 control-label">Data maxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="MaxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset> 
        </form>
    </div>
</div>