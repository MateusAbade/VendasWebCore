@model IEnumerable<VendasWebCore.Models.Vendas>
@{
    ViewData["Title"] = "Busca simples";
}

<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="MinDate">Data minima</label>
                    <input type="date" name="MinDate" class="form-control" value=@ViewData["minDate"] />
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label for="MaxDate">Data maxima</label>
                    <input type="date" name="MaxDate" class="form-control" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de vendas = @Model.Sum(obj => obj.Montante).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.vendedores)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.vendedores.Dep)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Montante)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vendedores.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vendedores.Dep.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Montante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</div>

